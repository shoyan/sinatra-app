<form action="/memos" method="POST">
  <div class="container">
    <div class="form-group">
      <label for="inputTitle1">タイトル</label>
      <input type="text" name="title" class="form-control" id="inputTitle1" placeholder="Enter title">
    </div>
    <div class="form-group">
      <label for="inputBody1">本文</label>
      <textarea name="body" class="form-control" id="inputBody1" rows="5"></textarea>
    </div>
    <div class="form-group">
      <input type="submit" value="送信する" class="btn btn-primary">
    </div>
  </div>
</form>
