<form action="/memos/<%= @memo.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <div class="container">
    <div class="form-group">
      <label for="inputTitle1">タイトル</label>
      <input type="text" name="title" class="form-control" id="inputTitle1" placeholder="Enter title" value="<%= @memo.title %>">
    </div>
    <div class="form-group">
      <label for="inputBody1">本文</label>
      <textarea name="body" class="form-control" id="inputBody1" rows="5"><%= @memo.body %></textarea>
    </div>
    <div class="form-group">
      <input type="submit" value="送信する" class="btn btn-primary">
    </div>
  </div>
</form>
